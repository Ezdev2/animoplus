{
	"info": {
		"_postman_id": "auth-collection-id",
		"name": "AnimoPlus - Authentication",
		"description": "Authentication endpoints for AnimoPlus API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Public Auth",
			"item": [
				{
					"name": "Register Client",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Registration successful', function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									"pm.test('Response contains verification message', function () {",
									"    const response = pm.response.json();",
									"    pm.expect(response.message).to.include('verify your account');",
									"});",
									"",
									"pm.test('User is not verified initially', function () {",
									"    const response = pm.response.json();",
									"    pm.expect(response.user.is_verified).to.be.false;",
									"});",
									"",
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('unverified_user_email', response.user.email);",
									"    console.log('✅ Client registered - Email verification required');",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"{{$randomFullName}}\",\n  \"email\": \"{{$randomEmail}}\",\n  \"password\": \"{{user_password}}\",\n  \"password_confirmation\": \"{{user_password}}\",\n  \"user_type\": \"client\",\n  \"phone\": \"{{$randomPhoneNumber}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/register",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "register"]
						}
					}
				},
