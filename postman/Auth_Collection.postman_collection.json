			"item": [
				{
					"name": "Login Unverified User (Should Fail)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Login should fail for unverified user', function () {",
									"    pm.response.to.have.status(403);",
									"});",
									"",
									"pm.test('Response contains verification message', function () {",
									"    const response = pm.response.json();",
									"    pm.expect(response.message).to.include('verify your email');",
									"});",
									"",
									"console.log('✅ Unverified user login correctly blocked');"
								]
							}
						}
					],
